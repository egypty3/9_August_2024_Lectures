<div class="mx-auto w-75">
    <form method="post">
        <div class="row justify-content-center align-items-center">
            <div class="col-auto">
                <label class="text-success form-label" for="noOfElements">
                    No. of elements ?
                </label>
            </div>
            <div class="col-auto">
                <input type="number" name="noOfElements" id="noOfElements"
                value="@ViewBag.noOfElements"
                class="form-control" />
            </div>

            <div class="col-auto">
                <label for="theType" class="text-success form-label">Array Type :</label>
            </div>
            <div class="col-auto">
                <select class="form-select text-success" id="theType" name="theType">
                    <option value="int" selected="@(ViewBag.theType == "int")">int</option>
                    <option value="char" selected="@(ViewBag.theType == "char")">char</option>
                </select>
            </div>
            <div class="col-auto">
                <input type="submit"
                value="Create"
                class="btn btn-success"
                asp-route-theOrder="create" />
            </div>
        </div>
        <div class="mt-3 mx-auto w-25">
            @if (ViewBag.theOrder == "create")
            {
                <ul class="list-group">
                    @for (int x = 0; x < (int) ViewBag.noOfElements ; x++)
                    {
                        <li class="list-group-item">
                            <input type="text"
                                   name="element_@x"
                                   id="element_@x"
                                   class="form-control" />
                        </li>
                    }
                </ul>
            }
        </div>
        <div class="mt-3 text-center">
            <input type="submit"
                   value="Save"
                   class="btn btn-success"
                   asp-route-theOrder="save" />
            <input type="submit"
                   value="Load"
                   class="btn btn-warning"
                   asp-route-theOrder="load" />
         
        </div>

    </form>
</div>
<h1 class="text-center border border-success mt-3 w-25 mx-auto p-4">
    @Html.Raw(ViewBag.resultToView)
</h1>
